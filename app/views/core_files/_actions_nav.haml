%nav(role="navigation")
  %ul.nav.nav-tabs
    %li.active
      %a(href="#metadata" data-toggle="tab")
        Metadata
    - if !@darwin.blank?
      %li
        %a(href="#darwin" data-toggle="tab")
          Darwin Core
    - if !@core_file.supplemental_materials.blank? || !@core_file.supplemental_material_for.blank? || !@core_file.instructional_materials.blank? || !@core_file.instructional_material_for.blank? || !@core_file.transcriptions.blank? || !@core_file.transcription_of.blank? || @core_file.page_objects.length > 1
      %li
        %a(href="#supplemental-files" data-toggle="tab" data-pid="#{@core_file.pid}")
          Associated Files
    - if current_user_can? :edit, @core_file
      %li
        %a{ href: edit_core_file_path(@core_file),  data: {event: "external"} }
          %i.icon-pencil
          Manage File
      %li
        %a{ href: "#statistics", data: {toggle: "tab"}}
          %i.icon-bar-chart
          Statistics
    - if current_user.admin?
      %li
        %a{ href: files_reindex_path(@core_file), data: {event: "external"} }
          %i.icon-refresh
          Reindex
