%div
  = form_tag( request_move_file_path ) do
    %fieldset
      .row-fluid
        .span10
          = label_tag :collection_url, "What is the URL of the collection where you would like to move this file?", class: 'required-label'
          = text_field_tag :collection_url, nil, :required => true
      .row-fluid
        .span10
          = label_tag :reason, "Why are you requesting this item be moved?", class: 'required-label'
          = text_area_tag :reason, nil, :required => true, rows: 5, class: 'input-block-level'
          = submit_tag 'Request Move', class: "btn btn-warning", data: { confirm: "Are you sure you want to request that this file be moved?"}
