%div
  = form_tag( request_move_file_path ) do
    %fieldset
      .row-fluid
        .span10
          = label_tag "Where would you like this file to be moved?"
          = label_tag :collection_url, "Please enter the URL for the destination collection."
          = text_field_tag :collection_url, nil, :required => true
      .row-fluid
        .span10
          = label_tag :reason, "Why would you like us to move this file?"
          = text_area_tag :reason, nil, :required => true, rows: 5, class: 'input-block-level'
          = submit_tag 'Request', class: "btn btn-warning", data: { confirm: "Are you sure you want to move this file?"}
