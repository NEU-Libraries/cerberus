= will_paginate @loads
%table.table.table-striped
  %th Loader
  %th Collection
  %th Time of Upload
  %th Total Files
  %th
  - @loads.each do |loader|
    %tr
      %td
        = loader.loader_name
      %td
        -if Collection.exists?(loader.collection)
          = Collection.find(loader.collection).title
        - else
          N/A
      %td
        = loader.created_at.strftime("%m-%d-%Y %T")
      %td
        .text-center= loader.number_of_files
      %td
        - short_name = t('loaders').values.select {|load| load[:long_name]==loader.loader_name}
        - short_name = short_name[0][:short_name]
        = link_to("View Report", "loaders/#{short_name}/report/#{loader.id}", class: "btn btn-small btn-success")
