%table.table.table-striped
  %th Loader
  %th Time of Upload
  %th Total Files
  %th
  - @loads = @loads.sort_by{|l| l.created_at}.reverse
  - @loads.each do |loader|
    %tr
      %td
        = loader.loader_name
      %td
        = loader.created_at.strftime("%m-%d-%Y %T")
      %td
        = loader.number_of_files
      %td
        -if loader.loader_name == t('drs.loaders.marcom.long_name')
          = link_to("View Report", loaders_marcom_report_path(loader.id), class: "btn btn-small btn-success")
        - elsif loader.loader_name == t('drs.loaders.coe.long_name')
          = link_to("View Report", loaders_coe_report_path(loader.id), class: "btn btn-small btn-success")
        - elsif loader.loader_name == t('drs.loaders.cps.long_name')
          = link_to("View Report", loaders_cps_report_path(loader.id), class: "btn btn-small btn-success")
