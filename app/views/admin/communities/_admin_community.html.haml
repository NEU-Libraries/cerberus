.communities
  = render 'catalog/results_pagination'

  %table.table.table-striped
    - @communities.each_with_index do |community, i|
      %tr
        %td
          .large
            = link_to(community.title.html_safe, community_path(community))
        %td
          = link_to("Edit", edit_admin_community_path(community),
          class: "btn btn-small btn-warning")
        %td
          %a{ href: "#deleteModal_deleteModalcommunity_#{i}", title: "Delete \"#{community.title}\"?", data: {toggle: 'modal'}, class:"btn btn-danger btn-small" } Delete
          = render partial: 'admin/delete_modal', locals: { title: "Delete \"#{community.title}\"?", button_title: "Delete", delete_path: "#{admin_community_path(community)}", item: community, index: "community_#{i}" }

  = render 'catalog/results_pagination'
