%ul.breadcrumb
  %li
    = link_to 'Admin Panel', '/admin'
  %li.active
    = link_to 'Manage Communities', '/admin/communities'

%h2.page-header All Communities

.row
  .span4
    =link_to("Create new community", new_admin_community_path, class: "btn btn-success")
%br

= render 'catalog/results_pagination'

%table.table.table-striped
  - @communities.each do |community|
    = render partial: "admin_community", locals: { community: community }

= render 'catalog/results_pagination'
