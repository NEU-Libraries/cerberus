%ul.breadcrumb
  %li
    = link_to 'Admin Panel', '/admin'
  %li.active
    = link_to 'Manage Core Files', '/admin/files'

%h2.page-header Core Files

%br
%ul.nav.nav-tabs
  %li.active
    = link_to 'Incomplete', '#incomplete'
  %li
    = link_to 'In Progress', '#in_progress'
  %li
    = link_to 'Tombstoned', '#tombstoned'

.tab-content
  #incomplete.tab-pane.active
    = render partial: "incomplete", locals: { core_files: @incomplete }

  #in_progress.tab-pane
    = render partial: "in_progress", locals: { core_files: @in_progress }

  #tombstoned.tab-pane
      = render partial: "tombstoned", locals: { core_files: @tombstoned }

  :javascript
    $('.nav-tabs a').click(function (e) {
      e.preventDefault();
      $(this).tab('show');
    });
    var url = document.location.toString();
    if (url.match('#')) {
        $('.nav-tabs a[href=#'+url.split('#')[1]+']').tab('show') ;
    }
