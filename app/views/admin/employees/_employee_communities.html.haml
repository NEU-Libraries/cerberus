%hr
%h3 User's Current Communities

%ul
  - communities = employee.communities
  - communities.sort_by!{|c| c.title}
  - communities.each do |c| 
    .row
      .span4
        %h4= c.title.html_safe
      .span4
        =link_to("Remove",
                  admin_employee_path(employee, remove: c.pid),
                  remote: true,
                  method: 'put',
                  confirm: "Are you sure you wish to remove this user?",
                  class: "btn btn-small btn-danger")
