<header>
  <h1 class="page-header">
    Create a new Sentinel
  </h1>
</header>

<%= form_for @sentinel, url: {action: "create"} do |f| %>
  <% if params[:parent].present? %>
  <%= f.hidden_field :set_pid, :value => params[:parent] %>
  <% end %>
  <div>
  <% @content_list.each_with_index do |a, i| %>
    <% if i.even? %>
      </div>
      <div class="row-fluid">
    <% end %>
      <fieldset class="span6">
        <legend>
          <%= "#{a[0]}" %>
        </legend>
        Enable <%= check_box_tag "#{a[1]}_checkbox" %>
        <br/>
        <br/>

        <%= label_tag 'core_file[mass_permissions]', "Choose Mass Permissions:" %>
        <%= select_tag 'core_file[mass_permissions]', options_for_select(['public', 'private'], 'public') , class: "span6", disabled: true %>

        <div class="permission<%= i %>">
          <%= f.label :identity, "Select Group" %>
          <% options = {"" => ""} %>
          <%= select_tag "sentinel[#{a[1]}][permissions][identity][]", options_for_select(current_user.pretty_groups), class: "span12", prompt: "-- Select Group --", disabled: true %>
          <%= label_tag "sentinel[#{a[1]}][permissions][permission_type][]", "Should this identity be allowed to read or edit?" %>
          <div style="display: block;">
            <%= select_tag "sentinel[#{a[1]}][permissions][permission_type][]", options_for_select(['read', 'edit']), class: "span12", disabled: true %>
          </div>
        </div>
        <button disabled class="btn btn-success btn-block" id="add_another_permission<%= i %>" type="button">
          <i class="icon-plus-sign icon-large"></i>
          Add Permission
        </button>
      </fieldset>
      <script>

        $('#add_another_permission<%= i %>').addFormFields({
          target: $('#add_another_permission<%= i %>').siblings('div:not(.to-remove)'),
          titleText: 'Remove permission'
        });

      </script>
      <% if i == @content_list.length %>
        </div>
      <% end %>
      <% next %>
      <fieldset class="span6">
        <legend>
          <%= "#{a[0]}" %>
        </legend>
        Enable <%= check_box_tag "#{a[1]}_checkbox" %>
        <br/>
        <br/>

        <%= label_tag 'core_file[mass_permissions]', "Choose Mass Permissions:" %>
        <%= select_tag 'core_file[mass_permissions]', options_for_select(['public', 'private'], 'public') , class: "span6", disabled: true %>

        <div class="permission<%= i %>">
          <%= f.label :identity, "Select Group" %>
          <% options = {"" => ""} %>
          <%= select_tag "sentinel[#{a[1]}][permissions][identity][]", options_for_select(current_user.pretty_groups), class: "span12", prompt: "-- Select Group --", disabled: true %>
          <%= label_tag "sentinel[#{a[1]}][permissions][permission_type][]", "Should this identity be allowed to read or edit?" %>
          <div style="display: block;">
            <%= select_tag "sentinel[#{a[1]}][permissions][permission_type][]", options_for_select(['read', 'edit']), class: "span12", disabled: true %>
          </div>
        </div>
        <button class="btn btn-success btn-block disabled" id="add_another_permission<%= i %>" type="button">
          <i class="icon-plus-sign icon-large"></i>
          Add Permission
        </button>
      </fieldset>
      <script>

        $('#add_another_permission<%= i %>').addFormFields({
          target: $('#add_another_permission<%= i %>').siblings('div:not(.to-remove)'),
          titleText: 'Remove permission'
        });

      </script>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>

<script>
  $(document).ready(function () {
  	$("input:checkbox").click(function () {
  		if($(this).is(':checked')) {
  			$(this).parent().find('*:disabled').removeAttr("disabled");
  		} else {
  			$(this).parent().find('select, button').prop('disabled', true);
  		}
  	});
  });
</script>
