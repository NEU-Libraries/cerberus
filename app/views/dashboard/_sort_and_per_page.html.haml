.batch-info
  - session[:batch_edit_state] = "on"
  = batch_delete
  = batch_edit_continue("Edit Selected")
  - unless @response.response['numFound'] < 2
    = form_tag params[:controller] == "folder" ? sufia.folder_index_path : sufia.dashboard_index_path, :method=>:get, :class=>'per_page form-inline' do
      = label_tag(:sort, "Sort By:")
      = select_tag(:sort, options_for_select(sort_fields, h(params[:sort])))
      = label_tag(:per_page, "Results per page:")
      = select_tag(:per_page, options_for_select(['10', '20', '50', '100'], h(params[:per_page])), :title => "Number of results to display per page", )
      = search_as_hidden_fields(:omit_keys => [:per_page, :sort])
      %button.btn.btn-primary
        %i.icon-refresh
        Refresh
  - end unless sort_fields.empty?
