= form_tag sufia.dashboard_index_path, :method => :get, :class => "well form-search " do
  %label.accessible-hidden Search My Dashboard
  = text_field_tag :q, params[:q], :class => "q", :placeholder => "Search My Dashboard", :type => "search", :id => "dashboard_search"
  = hidden_field_tag :search_field, 'all_fields'
  = search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe
  %button#dashboard_submit.btn.btn-primary{:type => "submit"}
    %i.icon-search
    Go
