<%= form_for :nu_collection, url: nu_collections_path do |f| %>
  <p>
    <%= f.label :nu_title, "Title:" %><br>
    <%= f.text_field :nu_title, required: true %>
  </p>
 
  <p>
    <%= f.label :nu_description, "Description:" %><br>
    <%= f.text_area :nu_description, required: true %>
  </p>

  <h3> Creator </h3>

  <span class='alert'>A complete individual name and/or a corporate creator are required</span>

  <%= f.label :creator_first_name, "Creator's first name:" %>
  <%= f.text_field :creator_first_name %> <br>

  <%= f.label :creator_last_name, "Creator's last name:" %> 
  <%= f.text_field :creator_last_name %> <br>

  <%= f.label :creator_corporate, "Enter an organizational name if an organization should be given primary credit for creation of this collection:" %> 
  <%= f.text_field :creator_corporate %> <br>

  <h3> Keywords </h3> 

  <div class='keyword'> 
    <%= f.label :keyword, "Add some relevant keywords", namespace: '0' %> 
    <%= f.text_field :keyword, namespace: '0', name: 'nu_collection[keyword][]'%>
  </div>

  <button type='button' class='btn btn-mini' id='add_another_keyword'><i class='icon-plus-sign'></i></button> 

  <h3> Permissions </h3>

  <%= render partial: 'create_form_permissions_element', locals: {:f => f} %> 

  <button type='button' class="btn btn-mini" id="add_another_permission"><i class="icon-plus-sign"></i></button>

  <br>
  <br>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>