<% if @nu_collection.pid != 'neu:1' %>
  <ul class="breadcrumb">
    <li><%= link_to @nu_collection.parent.title, nu_collections_path + '/' + @nu_collection.parent.pid %> <span class="divider">/</span></li>
    <li class="active"><%= @nu_collection.title %></li>
  </ul>
<% else %>
  <h2><%= @nu_collection.title %></h2>
<% end %>

<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% end %>

<p class='well'>
  <% if @nu_collection.description.empty? %> 
    <span> No abstract has been provided for this Collection. </span>
  <% else %> 
    <%= @nu_collection.description %>
  <% end %> 
</p>