!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    %h3 Load Completion Alert

    %p The following load has completed:
    %ul
      %li= "Loader: #{@load.loader_name}"
      %li= "Collection: #{Collection.find("#{@load.collection}").title}"
      %li= "Time Started: #{@load.created_at}"
      %li= "Time Completed: #{@load.updated_at}"
      %li= "Number of Files: #{@load.number_of_files}"
      -if @load.loader_name == "Marketing and Communications"
        %p= "A link to the load report can be found #{link_to 'here', loaders_marcom_report_url(@load.id)}".html_safe
      - elsif @load.loader_name == "College of Engineering"
        %p= "A link to the load report can be found #{link_to 'here', loaders_engineering_report_url(@load.id)}".html_safe
      - elsif @load.loader_name == "College of Professional Studies"
        %p= "A link to the load report can be found #{link_to 'here', loaders_cps_report_url(@load.id)}".html_safe
