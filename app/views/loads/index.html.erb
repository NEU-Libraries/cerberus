<head>
  <title>Ingest Management</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      margin: 0;
      padding: 20px;
      background-color: #f4f4f4;
    }
    header {
      background-color: #333;
      color: #fff;
      text-align: center;
      padding: 1rem;
    }
    main {
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .expandable-row {
      cursor: pointer;
    }
    .expandable-row:hover {
      background-color: #f5f5f5;
    }
    .ingest-details {
      display: none;
      background-color: #f9f9f9;
    }
    .upload-form {
      margin-bottom: 2rem;
    }
    .upload-form input[type="file"] {
      display: block;
      margin-bottom: 0.5rem;
    }
    .upload-form input[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<body>
<header>
  <h1>Ingest Management</h1>
</header>

<main>
  <section class="upload-form">
    <h2>Upload ZIP File</h2>
    <%= form_tag loads_path, multipart: true do %>
      <div>
        <%= file_field_tag :file, accept: 'application/zip,application/x-zip-compressed' %>
      </div>
      <div>
        <%= submit_tag "Upload and Process" %>
      </div>
    <% end %>
  </section>

  <section>
    <h2>Load Reports</h2>
    <table>
      <thead>
      <tr>
        <th>Status</th>
        <th>Started At</th>
        <th>Finished At</th>
        <th>Success Rate</th>
      </tr>
      </thead>
      <tbody>
      <% @load_reports.each do |load_report| %>
        <tr class="expandable-row" data-load-report-id="<%= load_report.id %>">
          <td><%= load_report.status %></td>
          <td><%= load_report.started_at %></td>
          <td><%= load_report.finished_at %></td>
          <td><%= load_report.success_rate %>%</td>
        </tr>
        <tr class="ingest-details" id="ingest-details-<%= load_report.id %>">
          <td colspan="5">
            <table>
              <thead>
              <tr>
                <th>PID</th>
                <th>XML Filename</th>
                <th>Status</th>
                <th>Created At</th>
              </tr>
              </thead>
              <tbody>
              <% load_report.ingests.each do |ingest| %>
                <tr>
                  <td><%= ingest.pid %></td>
                  <td><%= ingest.xml_filename %></td>
                  <td><%= ingest.status %></td>
                  <td><%= ingest.created_at %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const expandableRows = document.querySelectorAll('.expandable-row');
    expandableRows.forEach(row => {
      row.addEventListener('click', function() {
        const loadReportId = this.getAttribute('data-load-report-id');
        const detailsRow = document.getElementById(`ingest-details-${loadReportId}`);
        detailsRow.style.display = detailsRow.style.display === 'table-row' ? 'none' : 'table-row';
      });
    });
  });
</script>
</body>

