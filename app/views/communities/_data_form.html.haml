= form_for @community do |f|  
  = f.hidden_field :parent, name: 'set[parent]'
  %fieldset
    %legend Required Information
    .row-fluid
      .span8
        = f.label :parent, "Parent Community *"
        //= f.text_field :parent, required: true,  pattern: ".*\\S.*", name: 'set[parent]', class: "input-block-level", placeholder: "neu:1"
        %input{:id => "community_autocomplete", :type => "text"}
        = f.label :title, "Title *"
        = f.text_field :title, required: true, pattern: ".*\\S.*", name: 'set[title][]', class: "input-block-level", placeholder: "Univeristy Libraries"
    = f.label :description, "Description *"
    = f.text_area :description, required: true, pattern: ".*\\S.*", name: 'set[description][]', class: "input-block-level", rows: 5
  .form-actions
    = f.submit class: ['btn', 'btn-primary', 'btn-large'], value: 'Submit'
