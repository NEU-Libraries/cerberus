%h2.page-header Staged Upload

= form_tag(staged_upload_path, method: "post", multipart: true) do
  %fieldset
    .row-fluid
      .span12
        = label_tag :box_number, "Enter the box number"
        = text_field_tag :box_number, nil, :required => true
    .row-fluid
      .span12
        = label_tag "file", "Zip File to upload", class: "required-label"
        = file_field_tag 'file', required: true, "aria-required" => true, "accept"=>".zip"
  .form-actions
    = submit_tag "Upload", :class => ['btn', 'btn-success'], :id => "upload_button", data: { disable_with: "Please wait..."}

%h3 Existing Boxes
%ul
  - @boxes.each do |b|
    %li
      = b
