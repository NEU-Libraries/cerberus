.btn-group.pull-right
  = render :partial => 'shopping_carts/tracker'
  - if user_signed_in?
    = render :partial => 'users/notify_link'
    - if !current_user.employee_id.blank?
      %a.btn{:href => employee_path(current_user.employee_id), :title => "click for My DRS"}
        %span.icon-user( aria-hidden="true" )
        %span.sr-only
          User page
        = current_user.pretty_name
    - else
      %a.btn.disabled{:href => "#"}
        %span.icon-user( aria-hidden="true" )
        = current_user.pretty_name
    %button.btn.dropdown-toggle{"data-toggle" => "dropdown",  "aria-label" => "Toggle user menu dropdown menu", :title => "click for additional menu options"}
      %span.icon-caret-down( aria-hidden="true" )
    %ul.dropdown-menu(role="menu")
      - if !current_user.employee_id.blank?
        %li{:class => ("active" if action_name == "employee_files")}
          = link_to raw('<span class="icon-file" aria-hidden="true" ></span> My Deposits'), employee_files_path(current_user.employee_id), "tab-index" => "-1"
      - if current_user.loader?
        %li{:class => ("active" if action_name == "my_loaders")}
          %a.top_nav{href: my_loaders_path, "tab-index" => "-1"}
            %span.icon-upload-alt( aria-hidden="true")
            My Loaders
      %li
        %a.top_nav{href: compilations_path,  "tab-index" => "-1"}
          =render partial: 'shared/icon', locals: { class_string: t('drs.compilations.icon') }
          =t('drs.compilations.name').capitalize + 's'
      %li.divider
      - if current_user.multiple_accounts?
        %li{:class => ("active" if action_name == "select_account")}
          %a.top_nav{href: select_account_path, "tab-index" => "-1"}
            =render partial: 'shared/icon', locals: { class_string: t('drs.multiple_accounts.menu_icon') }
            = t('drs.multiple_accounts.menu_link')
      - if current_user.admin?
        %li{:class => ("active" if action_name == "admin_panel")}
          %a.top_nav{href: admin_panel_path, "tab-index" => "-1"}
            %span.icon-star( aria-hidden="true")
            Admin
      %li= link_to raw('<span class="icon-signout" aria-hidden="true" ></span> Log Out'), destroy_user_session_path, :id => 'logout_nav_link',  "tab-index" => "-1"
  - else
    = link_to raw('<span class="icon-signin" aria-hidden="true" ></span> Login'), new_user_session_path, :class => "btn", title: "Sign in with your myNEU username and password to see more content.", data: {toggle: "tooltip", placement: "bottom"}
