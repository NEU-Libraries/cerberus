.btn-group.pull-right
  - if user_signed_in?
    = render :partial => 'users/notify_link'
    %a.btn{:href => sufia.profile_path(current_user), :title => "click for User Profile"}
      %i.icon-user &nbsp;
      = current_user.name
    %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      %span.icon-caret-down{:title => "click for additional menu options"}
    %ul.dropdown-menu
      %li= link_to raw('<i class="icon-dashboard"></i> my dashboard'), sufia.dashboard_index_path, :id => 'dashboard_nav_link'
      %li= link_to raw('<i class="icon-upload-alt"></i> upload'), sufia.new_generic_file_path, :id => 'upload_nav_link'
      %li= link_to raw('<i class="icon-cog"></i> edit profile'), sufia.edit_profile_path(current_user), :id => 'upload_nav_link'
      %li.divider
      %li= link_to raw('<i class="icon-signout"></i> log out'), destroy_user_session_path, :id => 'logout_nav_link'
  - else
    = link_to raw('<i class="icon-signin"></i> Login'), new_user_session_path, :class => "btn"
