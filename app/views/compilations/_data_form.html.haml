= form_for compilation do |f| 
  
  = f.label :title, class: "required-label", title: "Required Field", data: { toggle: "tooltip"}
  = f.text_field :title, placeholder: 'Huskies', required: true, pattern: ".*\\S.*", class: "input-block-level" 

  = f.label :description, "Description" 
  = f.text_area :description, placeholder: 'Husky photos throughout history.', class: "input-block-level", rows: 5 
  
  .form-actions
    = f.submit class: "btn btn-primary"
    = link_to "Cancel", compilations_path, class: "btn"