= form_for compilation do |f|

  = f.label :title, class: "required-label", title: "Required Field", data: { toggle: "tooltip"}
  = f.text_field :title, placeholder: 'Huskies', required: true, pattern: ".*\\S.*", class: "input-block-level"

  = f.label :description, "Description"
  = f.text_area :description, placeholder: 'Husky photos throughout history.', class: "input-block-level", rows: 5

  = f.label :mass_permissions, "Permissions"
  = f.select :mass_permissions, options_for_select(["public", "private"], @compilation.mass_permissions)

  / %h4 Read Permissions For Groups

  / = render partial: "shared/group_permissions", locals: {form: f, item: @compilation, valid_perms: [:read], groups: @compilation.permission_groups }

  .row-fluid
    %legend Permissions
    = render partial: 'shared/sets/data_form_permissions_element', locals: {:read_only => true, :f => f, :array_type => "compilation", :permissions => filtered_permissions(@compilation) }
    %button#add_another_permission.btn.btn-success.btn-block{:type => "button"}
      %i.icon-plus-sign.icon-large
      Add Permission

  .form-actions
    = f.submit class: "btn btn-primary"
    = link_to "Cancel", compilations_path, class: "btn"
