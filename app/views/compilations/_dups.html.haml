.modal-header
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} &#215;
  %h3= "Add to \"#{@compilation.title}\""
.modal-body
  - intersection.each do |i|
    =link_to(i.title, core_file_path(i.pid), class:"btn-block")
.modal-footer
  %button.btn{"data-dismiss" => "modal"} Close
  = link_to("Add Collection", add_entry_path(id: @compilation.pid, entry_id: params[:entry_id], proceed:true), method: 'post', remote: true, id: "add-to-compilation-#{@compilation.pid}", class: "btn btn-success btn-proceed", data: { title: "#{@compilation.title}"} )
