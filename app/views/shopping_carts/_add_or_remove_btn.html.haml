- if !session['ids'] || !session['ids'].include?(id) 
  %a.btn.btn-mini.btn-clear{ title: "Add to download", href:  update_cart_path(add: id), data: { :method => 'put', :remote => 'true', toggle: "tooltip" }, "aria-role" => "checkbox", "aria-checked" => "false" }
    %i.icon-check-empty
    %span.sr-only
      Add to download
- else
  %a.btn.btn-mini.btn-clear{ title: "Remove from download", href:  update_cart_path(delete: id), data: { :method => 'put', :remote => 'true', toggle: "tooltip" }, "aria-role" => "checkbox", "aria-checked" => "true" }
    %i.icon-check
    %span.sr-only
      Remove from download