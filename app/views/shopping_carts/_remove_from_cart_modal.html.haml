- # Note that this assumes its being passed a SolrDocument
#removeFromCartModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "removeFromCartModalLabel", role: "dialog", tabindex: "-1" }
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} x
    %h3#removeFromCartModalLabel
      Confirm removal from #{t('drs.shoppingcarts.name')}
  .modal-body
    %p= "Are you sure you want to remove this item from your #{t('drs.shoppingcarts.name')}"
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal" } Close
    =link_to("Remove Item", shopping_cart_path(delete: item.pid), method: 'put', class: 'btn btn-danger')
