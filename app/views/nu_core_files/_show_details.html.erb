    <h2 class="non lower">File Details</h2>
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>Depositor</th>
          <td itemprop="accountablePerson" itemscope itemtype="http://schema.org/Person"><span itemprop="name"><%= link_to_profile @nu_core_file.depositor %></span></td>
        </tr>
        <tr>
          <th>Date Uploaded</th>
          <td itemprop="datePublished">
            <%= @nu_core_file.date_uploaded %>
          </td>
        </tr>
        <tr>
          <th>Date Modified</th>
          <td itemprop="dateModified">
            <%= @nu_core_file.date_modified %>
          </td>
        </tr>
<% unless @nu_core_file.related_files.empty? %>
  <tr>
          
          <th>Related Files</th>
          <td>
              <div class="related-files">
                  <dl><dt>         
	              <% @nu_core_file.related_files.each do |f| %>
	                <dd><%= link_to(f.label, nu_core_file_url(f.noid)) %></dd>
	              <% end %>
                  </dt></dl>         
              </div>
          </td>
        </tr>
<% end %>
