- if params[:f]
  %h5 Selected Facets
  - params[:f].each do |k,v|
    - v.each do |selected_facet|
      - link_options = remove_facet_params(k, selected_facet, params).merge!Hash["controller" => "catalog", :action=> "index"]
      .drs-facet-selected
        = link_to  url_for(link_options), {:class=>'close', :'data-dismiss' => "alert" } do
          &times;
        %i.icon-ok.icon-large
        %strong= selected_facet
