.hero-unit
  %h1
    #{t('drs.product_name.short')}
    %small
      #{t('drs.product_name.full')}
  %p
    = t ('drs.homepage.description.short')
    %button.btn.btn-link{data: { toggle: "collapse", target: "#homePageLongDescription"} }
      =raw "&hellip;"
      %span.sr-only
        Expand description text toggle
  %p.collapse#homePageLongDescription
    = t('drs.homepage.description.long')
  %a.btn.btn-link.pull-right{:href => "/terms/"} Terms of Use
