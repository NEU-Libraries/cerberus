-# header bar for doc items in index view -%>
%header.documentHeader.row
  -# main title container for doc partial view
      How many bootstrap columns need to be reserved
      for bookmarks control depends on size.
  - document_actions = capture do
    -# bookmark functions for items/docs
    = render_index_doc_actions document, wrapping_class: "index-document-functions col-sm-3 col-lg-2"

  %h3.index_title.document-title-heading{class: document_actions.present? ? "col-sm-9 col-lg-10" : "col-md-12"}
    = link_to_document document, document_show_link_field(document)
    %a.btn.btn-primary.btn-xs{ "role"=>"button", "data-toggle"=>"collapse", "href"=>"##{document.id}_collapse", "aria-expanded"=>"false", "aria-controls"=>"#{document.id}_collapse"}
      =icon('plus')
    %div.collapse.list{id:"#{document.id}_collapse"}
      %div.well
        - if document['system_create_dtsi']
          %dt= "Date Created:"
          %dd= DateTime.parse(document["system_create_dtsi"]).strftime("%c")
        -if document['description_tesim'] || document['abstract_tesim']
          %dt="Description:"
          - if document['description_tesim']
            %dd= document['description_tesim'].first
          - if document['abstract_tesim']
            %dd= document['abstract_tesim'].first
        -if document['creator_tesim']
          %dt="Creator"
          %dd= document['creator_tesim'].first

  = document_actions
