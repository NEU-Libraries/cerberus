.drs-item-details
  %header
    %h4.drs-item-title
      %a{href: item.path}
        / = item.title or "Default title"
        - if item.klass == 'PageFile'
          - ordinal_value = item.ordinal_value
          - page_item = item
          - item = item.get_core_record
        = "#{item.non_sort} "
        = kramdown_parse(item.title) or "Default title"
        - if ordinal_value && !ordinal_value.blank?
          - item = page_item
          %small
            = "#{I18n.t("drs.display_labels.PageFile.short")} #{ordinal_value}"
    -if defined? cart_remove_link
      = cart_remove_link
  = render partial: 'shared/drs_item/drs_item_ad_details', locals: {item: item}
