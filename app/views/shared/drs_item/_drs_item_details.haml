.drs-item-details
  %header
    %h4.drs-item-title
      %a{href: polymorphic_path(item)}
        = item.title or "Default title"
    -if defined? item.creators and item.creators.length > 0
      .div-creators
        - item.creators.each_with_index do | creator, i |
          - if i < 2 and creator.length > 0
            %h5.drs-item-creator
              = creator
        - if item.creators.length > 3
          &hellip;
  = render partial: 'shared/drs_item/drs_item_ad_details', locals: {item: item}
