- unless defined? thumbs
  - thumbs = @nu_core_file.thumbnail_list


-if thumbs.length > 0
  %span{"data-alt" => "", "data-picture" => ""}
    %span.thumbnail-s1{"data-src" => thumbs[0] , "data-media" => "(min-width: 0)" }
      /Fallback content for non-JS browsers. Same img src as the initial, unqualified source element.
    %noscript
      %img{alt: " ", src: thumbs[0]}
    - if thumbs.length > 1
      %span.thumbnail-s1-2x{"data-src" => thumbs[1] , "data-media" => "(min-device-pixel-ratio: 2.0), ( -webkit-min-device-pixel-ratio: 2.0 ) " }
      %span.thumbnail-s2{"data-src" => thumbs[1] , "data-media" => "(min-width: 981px)" }
    - if thumbs.length > 2
      %span.thumbnail-s2-2x{"data-src" => thumbs[2], "data-media" => "(min-width: 981px) and (min-device-pixel-ratio: 2.0), (min-width: 900px) and (-webkit-min-device-pixel-ratio: 2.0)" }

