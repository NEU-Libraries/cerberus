-if @thumbs.length > 0
  %span{"data-alt" => "", "data-picture" => ""}
    %span.thumbnail-s1{"data-src" => @thumbs[0] , "data-media" => "(min-width: 0)" }
      /Fallback content for non-JS browsers. Same img src as the initial, unqualified source element.
    %noscript
      %img{alt: " ", src: @thumbs[0]}
    - if @thumbs.length > 1
      %span.thumbnail-s2{"data-src" => @thumbs[1], "data-media" => "(min-width: 200px)" }
    - if @thumbs.length > 2
      %span.thumbnail-s3{"data-src" => @thumbs[2], "data-media" => "(min-width: 200px) and (min-device-pixel-ratio: 2.0), (min-width: 200px) and (-webkit-min-device-pixel-ratio: 2.0)" }
    - if @thumbs.length > 3
      %span.thumbnail-s4{"data-src" => @thumbs[3], "data-media" => "(min-width: 981px)"}
      - content_for(:extra_head_content) do
        ="<link rel=\"preload\" media=\"(min-width: 981px)\" href=\"#{@thumbs[3]}\" as=\"image\">".html_safe
    - if @thumbs.length > 4
      %span.thumbnail-s5{"data-src" => @thumbs[4], "data-media" => "(min-width: 981px) and (min-device-pixel-ratio: 2.0), (min-width: 981px) and (-webkit-min-device-pixel-ratio: 2.0)"}
      - content_for(:extra_head_content) do
        ="<link rel=\"preload\" media=\"(min-width: 981px) and (min-device-pixel-ratio: 2.0), (min-width: 981px) and (-webkit-min-device-pixel-ratio: 2.0)\" href=\"#{@thumbs[4]}\" as=\"image\">".html_safe
