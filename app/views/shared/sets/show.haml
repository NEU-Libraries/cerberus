%ul.breadcrumb
  - breadcrumb_to_root(@set).each do |breadcrumb|
    =breadcrumb
  = render partial: 'shared/sets/breadcrumb_action_menu'
-# Had to break off the partial into two files to make sure the popover div renders outside of the list.
= render partial: 'shared/sets/breadcrumb_action_menu_links'


%article.well.clearfix
  %h1{:class => @set.klass, :id => "#{@set.pid}-title"}
    - if @set.klass == "NuCollection" # and doesn't have a thumbnail to render

      = render partial: 'shared/icon', locals: { class_string: 'icon-folder-open' }

    - elsif @set.klass == "Community"

      = render partial: 'shared/icon', locals: { class_string: 'icon-group' }

    = kramdown_parse(@set.title)
    = render partial: 'catalog/search_form', locals: { scope: @set.pid }
    %small
      = @set.type_label
  - if !@set.thumbnail_list.empty?
    %img{src: @set.thumbnail_list.first, title: @set.title, alt: "", class: ['img-polorid', 'pull-left']}(aria-labeledby="#{@set.pid}-title" role="presentation")
  - if !@set.description.blank?
    %p
      = @set.description

  - if current_user
    -if @set.klass == "NuCollection" && (current_user.can? :edit, @set.pid) && (@set.smart_collection_type.nil? || @set.smart_collection_type == "miscellany")
      %nav.set-actions
        %ul.nav.nav-pills
          %li
            %a{:href =>  edit_nu_collection_path(@set)}
              Edit
          %li
            %a{:href =>"#deleteCollectionModal"}(data-toggle="modal")
              Delete
      =render partial: 'shared/sets/delete_collections_modal'
.row
  - if current_user
    - current_user.view_pref
    %aside.drs-sidebar{class: current_user.view_pref == 'grid' ? 'span12' : "span3" }
      =render partial: 'shared/sets/sets_sidebar'

    %section{class: current_user.view_pref == 'grid' ? 'span12' : "span9" }
      = render 'catalog/results_pagination'
      =render :partial => 'catalog/document_list'
      = render 'catalog/results_pagination'
      =render partial: 'shared/sets/bottom_action_menu'
  - else
    %aside.drs-sidebar.span3
      =render partial: 'shared/sets/sets_sidebar'

    %section.span9
      = render 'catalog/results_pagination'
      =render :partial => 'catalog/document_list'
      = render 'catalog/results_pagination'

%div#add_compilation_form{ style: 'display:none' }
