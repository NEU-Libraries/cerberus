
%ul.breadcrumb  
  - breadcrumb_to_root(@set).each do |breadcrumb| 
    =breadcrumb
  = render partial: 'shared/sets/breadcrumb_action_menu'
-# Had to break off the partial into two files to make sure the popover div renders outside of the list.
= render partial: 'shared/sets/breadcrumb_action_menu_links'


%article
.well
  %h1{:class => @set.class}
    = @set.title
    %small
      = get_set_class_label(@set)
  - if @set.description.length > 0 
    %p
      = @set.description


  -if @set.instance_of?(NuCollection) && current_user_can_edit?(@set)
    %nav.set-actions
      %ul.nav.nav-pills
        %li
          %a{:href =>  edit_nu_collection_path(@set)}
            Edit
        %li
          =link_to("Delete", nu_collection_path(@set), method: :delete)
= render partial: 'shared/sets/show_sets'
- if @set.instance_of?(NuCollection)
  = render partial: 'shared/sets/show_files', locals: { collection: @set }
  %div#add_compilation_form{ style: 'display:none' } 
