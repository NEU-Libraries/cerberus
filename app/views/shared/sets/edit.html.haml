%h1.page-header
  Edit
  %i
    = @set.title
%ul.nav.nav-tabs
  %li.active
    %a{ href: "#edit",  data: {toggle: "tab"} }
      %i.icon-pencil
      Edit
  - if ("#{@set.class}" == "Collection" && !@set.is_smart_collection?) || (@set.is_smart_collection? && @set.smart_collection_type == "miscellany")
    %li
      %a{ href: "#move", data: {toggle: "tab"}}
        %i.icon-exchange
        Move
  - if !@set.is_smart_collection? || @set.smart_collection_type == "miscellany"
    %li
      %a{ href: "#delete", data: {toggle: "tab"}}
        %i.icon-trash
        Delete
  %li
    %a{ href: "#statistics", data: {toggle: "tab"}}
      %i.icon-bar-chart
      Statistics
  - if current_user.xml_loader?
    %li
      %a{ href: "#export", data: {toggle: "tab"}}
        %i.icon-cloud-download
        Export
  - if current_user.admin?
    %li
      %a{ href: "#sentinel", data: {toggle: "tab"} }
        %i.icon-shield
        Sentinel


.tab-content
  #edit.tab-pane.active
    - if @set.is_smart_collection? && @set.smart_collection_type != "miscellany"
      %div= t('drs.personal_graph.full_description').html_safe
    - else
      = render partial: "shared/sets/data_form", locals: { set: @set }
  - if ("#{@set.class}" == "Collection" && !@set.is_smart_collection?) || (@set.is_smart_collection? && @set.smart_collection_type == "miscellany")
    #move.tab-pane
      = render partial: "shared/sets/move", locals:  {set: @set }
  - if !@set.is_smart_collection? || @set.smart_collection_type == "miscellany"
    #delete.tab-pane
      = render partial: "shared/sets/delete", locals:  {set: @set }
  #statistics.tab-pane
    = render partial: "shared/sets/statistics", locals:  {set: @set }
  #export.tab-pane
    = render partial: "shared/sets/export_mods", locals:  {set: @set }
  - if current_user.admin?
    #sentinel.tab-pane
      = render partial: "shared/sets/sentinel", locals:  {set: @set }


:javascript
  $('.nav-tabs a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
  });
