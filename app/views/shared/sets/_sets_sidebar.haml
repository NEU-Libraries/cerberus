.btn-group{"data-toggle" => "drs-item-views-radio", "data-container" => ".drs-items"}
  - if current_user
    = link_to("List", sufia.profile_path(current_user, view_pref: 'list'), method: 'put', remote: 'true',data: {"target" => "drs-items-list"}, class: "btn btn-primary") 
    = link_to("Grid", sufia.profile_path(current_user, view_pref: 'grid'), method: 'put', remote: 'true',data: {"target" => "drs-items-grid"}, class: "btn btn-primary") 
  - else
    %a{ data: {"target" => "drs-items-list"}, class: "btn btn-primary" } 
      List
    %a{ data: {"target" => "drs-items-grid"}, class: "btn btn-primary" } 
      Grid
    